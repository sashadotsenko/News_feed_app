<%= form_for(:users, method: :post, url: create_user_path) do |form| %>
  <br>
  <div class="form-group">
    <%= form.label :email, value: 'Email' %><br>
    <%= form.text_field :email, class: "form-control mb-20" %><br>
    <%= form.label :password, value: 'Password' %><br>
    <%= form.password_field :password, class: "form-control mb-20" %><br>
    <%= form.check_box :admin, value: 'Admin' %>
    <%= form.label :admin, value: 'Admin' %>
  </div>
  <div class="form-group"><br>
    <%= form.submit 'Save', class: "btn btn-success btn-sm mt-10" %>
  </div>
<% end %>
